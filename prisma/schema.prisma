generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Item {
  id              String   @id @default(cuid())
  name            String
  description     String
  imageUrl        String
  displayedValue  Int
  realValue       Int
  category        String   @default("Other")
  gameSet         String   @default("SET_A") // SET_A, SET_B, SET_C
  isTreasure      Boolean  @default(false)
  publicRumor     String   @default("")
  intelPool       Json     @default("[]")
  createdAt       DateTime @default(now())
}

model GameSession {
  id        String   @id @default(cuid())
  roomCode  String
  winners   String   // JSON stringified winners
  totalRounds Int
  itemsSold String   // JSON stringified sold items
  createdAt DateTime @default(now())
}

model SuggestedItem {
  id              String   @id @default(cuid())
  name            String
  description     String
  suggestedValue  Int
  category        String   @default("Other")
  suggestedBy     String?  // Optional name of suggester
  status          String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt       DateTime @default(now())
}
